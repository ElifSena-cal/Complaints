@using complaint.Models
@model List<Complaints>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<section id="facts">
    <h2 class="complaint-title"> @ViewBag.v1 şikayet</h2>
    <hr />
</section>

<div class="complaint">
    <div class="row">
        @foreach (var a in Model)
        {

            <div class="col-md-6">
                <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                    <div class="bg-white p-2">
                        <div class="d-flex flex-row user-info">
                            <img class="rounded-circle" src="@a.User.UserImage" width="40">
                            <div class="d-flex flex-column justify-content-start ml-2"><span class="d-block font-weight-bold name">@a.User.UserNameSurname</span><span class="date text-black-50">@a.Date</span></div>
                        </div>
                        <div class="mt-2">
                            <p class="comment-text" style="word-break:break-word">@a.ComplainDetail</p><a href="/Complaint/GetComplaintDetail/@a.ComplaintID">Devamını Oku</a>
                        </div>


                        <div class="bg-white">
                            <div class="d-flex flex-row fs-12">
                             
                                    
                                    <div class="like p-2 cursor">
                                        <i class="fa fa-commenting-o"></i>
                                        <span class="ml-1">
                                            <a href="/Complaint/GetComplaintDetail/@a.ComplaintID" style="color:#666666">Yorum Yap</a>
                                        </span>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                }
            </div>
        </div>

